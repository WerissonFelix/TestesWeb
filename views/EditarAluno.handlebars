<h1>Editar aluno</h1>

<form action="/EditarAluno/{{aluno.id}}" method="POST">
  <label for="nome">Nome:</label>
  <input type="text" id="nome" name="nome" value="{{aluno.nome}}" required>
  <label for="idade">Idade:</label>
  <input type="number" id="idade" name="idade" value="{{aluno.idade}}" required>
  <label for="cpf">Cpf:</label>
  <input type="number" id="cpf" name="cpf" value="{{aluno.cpf}}" required>
  <button type="submit">Salvar</button>
</form>
<a href="/listarAlunos">Voltar</a>